<%- include( "./partials/header") %>

<div class="container">
    <div class="main">
       <h1>Edit Blog</h1>
       <form action="/<%= blog._id %>/edit" method="POST">
      <div class="box1">  <textarea name= "title" ><%= blog.title %></textarea>  </div>
       <div class="box2"> <textarea name="content" id="" rows="10"><%= blog.content %></textarea></div>
        <div class="btns">
            <button type="submit">Post</button>  
            <a href="/" class="back">Back</a>
        </div>
    </form>

    </div>
</div>

<style> 
    body{
        background-color: #F8fbf8;
        display: flex;
        flex-direction: column;
        font-family: 'Dois';
    }
    textarea{
        width: 100%;
    }

    .container{
        border-bottom: 2px solid gray;
        box-shadow: 5px 5px 5px lightslategray ;
    }
    
    .main{
        padding-left: 2rem;
        padding-right: 2rem;
        padding-bottom: .5rem ;
    }
    
    a, button{
        text-decoration: none;
        display: block !important;
        max-width: 4rem;
        height: 2.1rem;
        margin-right: .2rem;
        text-align: center;
        line-height: 2rem;
        border-radius: 4px;
        color: white;
        min-width: 4rem;
        font-family: inherit;
    }
    
    button, .back {
        background: rgb(65,105,225);
        margin-top: 1rem;
        min-width: 6rem;
        letter-spacing:  1px;
        margin-bottom: 1rem;
        font-family: inherit;
    }
    .back{
        background-color: gray !important;
    }

    .btns {
        display: flex;
    }
    .box1 {
        margin-bottom: .8rem;
    }
    textarea{
        border: none;
        font-size: large;
        border-left: 2px solid lightskyblue;
        font-family: inherit;
    }
   </style>
<%- include( "./partials/footer") %> 
